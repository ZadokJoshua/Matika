<Window x:Class="Matika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matika" xmlns:controls="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows.Foundation.UniversalApiContract"
        mc:Ignorable="d"
        Title="Matika" Height="635" Width="402"
        Background="#1F1F1F">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Background" Value="#060606"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Output Display-->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Image Source="\Images\menu.png" Height="20" Margin="10"/>
                </Button>

                <Label Content="Temperature" FontSize="30" Foreground="White" FontWeight="Regular"/>
            </StackPanel>

            <Label Content="0" Grid.Row="1" Foreground="White" FontSize="35" FontWeight="SemiBold"/>

            <Label Content="0" Grid.Row="3" Foreground="White" FontSize="35" FontWeight="SemiBold"/>
        </Grid>
        
        <!--Button Grid-->
        <Grid Grid.Row="1" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="CE" Grid.Column="1" Style="{StaticResource ButtonStyle}" Background="#131313"/>
            
            <Button Grid.Column="2"  Style="{StaticResource ButtonStyle}" Background="#131313">
                <Image Source="\Images\clear.png" Grid.Column="2"  Height="45"/>
            </Button>
            
            <Button Content="7" Grid.Row="1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="4" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="1" Grid.Row="3" Style="{StaticResource ButtonStyle}"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="+/-" Grid.Row="4" Style="{StaticResource ButtonStyle}"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="." Grid.Row="4" Grid.Column="2" Style="{StaticResource ButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
